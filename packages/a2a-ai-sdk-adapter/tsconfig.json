{
	"extends": "@total-typescript/tsconfig/bundler/no-dom",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": false,
		"incremental": true,
		"skipLibCheck": true,
		"noEmit": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}

